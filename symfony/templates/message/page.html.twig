{% extends 'base.html.twig' %}

{% block page %}{{ title }}{% endblock %}
{% block title %}{{ title }}{% endblock %}

{% block body %}
<h2>Message</h2>
<table>
<tr>
    <td>Id</td>
    <td>Content</td>
    <th>Name</th>
    <th>posted</th>
</tr>
{% for item in data %}
<tr>
    <td>{{ item.id }}</td>
    <td>{{ item.content }}</td>
    <td>{{ item.person.name }}</td>
    <td>{{ item.posted.format('Y-m-d H:i:s') }}</td>
</tr>
{% endfor %}
</table>

{% include '/message/pagenav.html.twig' with [thisPage, maxPages] %}
{% endblock %}
